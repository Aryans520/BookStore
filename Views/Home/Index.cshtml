@model IEnumerable<Product>

@{
    ViewData["Title"] = "صفحه اصلی";
}

<div class="text-center">
    <h1 class="display-4">به بوک استور خوش اومدی! </h1>
    <hr />
        <div class="row">
    @foreach (var item in Model) {
        <div class="col-3">
        <div  class="card" style="width: 18rem;">
            <img src="/images/@(item.Id).jpg" width="140" height="350" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
            <p class="card-text">@item.Description</p>
            <a asp-action="Detail"
               asp-controller="Home"
               asp-route-id="@item.Id"  class="btn btn-primary">خرید</a>

        </div>

                </div>
            </div>
    }
    </div>
</div>

@model DetailsViewModel
@{
    ViewData["Title"] = Model.Product.Name;
}
<div class="container mt-5">
    <div class="row">
        <!-- Product Images -->
        <div class="col-md-6 mb-4">
            <img src="~/images/@(Model.Product.Id).jpg" alt="Product" class="img-fluid rounded mb-3 product-image" id="mainImage">
          
        </div>

        <!-- Product Details -->
        <div class="col-md-6">
            <h2 class="mb-3">@Model.Product.Name</h2>
            <hr />
            <div class="mb-3">قیمت:
                <span class="h4 me-2">@Model.Product.Item.Price</span>
                تومان
            </div>
            
            <p class="mb-4">
               @Model.Product.Description
            </p>
           
            <div class="mb-4">
                <label for="quantity" class="form-label">تعداد:</label>
                <input type="number" class="form-control" id="quantity" value="1" min="1" style="width: 80px;">
            </div>
           <a asp-controller="Home" asp-action="AddToCart" asp-route-itemId="ItemId"> <button class="btn btn-primary btn-lg mb-3 me-2">
                
                <i class="bi bi-cart-plus"></i> افزودن به سبدخرید
                </button>
            </a>
            <button class="btn btn-outline-secondary btn-lg mb-3">
                <i class="bi bi-heart"></i> افزودن به علاقه‌مندی
            </button>
            <div class="mt-4">
                <h5>ویژگی محصول:</h5>
                <ul>
                    <li>
                        قطع:رقعی
                    </li>
                    <li>30-hour battery life</li>
                    <li>Touch sensor controls</li>
                    <li>Speak-to-chat technology</li>
                </ul>
            </div>
            <div class="mt-4">
                <h5> دسته بندی:</h5>
              <dl>
                  @foreach(var item in Model.Categories)
                  {
                      <dt>@item.Name</dt>
                        <dt>@item.Description</dt>

                  }


              </dl>
            </div>



        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function changeImage(event, src) {
            document.getElementById('mainImage').src = src;
            document.querySelectorAll('.thumbnail').forEach(thumb => thumb.classList.remove('active'));
            event.target.classList.add('active');
        }
</script>
